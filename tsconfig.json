{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module": "node16",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "declaration": true,
        "strict": true,
        "declarationDir": "./types",
        "rootDir": "./src",
        "target": "es6"
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}