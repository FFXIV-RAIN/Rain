{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "sourceMap": false,
        "baseUrl": "./",
    },
    "include": ["src/**/*", "tests/**/*", "types/*"],
    "exclude": [
        "node_modules",
        "dist"
    ],
}