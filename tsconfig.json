{
    "ts-node": {
        "files": true,
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "compilerOptions": {
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module": "node16",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "declaration": true,
        "strict": true,
        "declarationDir": "./types",
        "target": "es6",
        "baseUrl": "./",
        "paths": {
            "@rain/*": [
                "@rain/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "@rain/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}